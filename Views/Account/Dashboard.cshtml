@{
    ViewData["Title"] = "Executive Dashboard";
}

<script src="https://cdn.tailwindcss.com"></script>
<link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    body { 
        font-family: 'Outfit', sans-serif; 
        background-color: #0f172a; /* Deep Navy/Slate */
        color: #f8fafc;
    }
    .dark-card {
        background: linear-gradient(145deg, #1e293b, #0f172a);
        border: 1px solid #334155;
    }
    .accent-glow {
        box-shadow: 0 0 20px rgba(59, 130, 246, 0.2);
    }
</style>

<div class="min-h-screen">
    <nav class="border-b border-slate-800 bg-slate-900/50 backdrop-blur-xl sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-6 h-20 flex items-center justify-between">
            <div class="flex items-center gap-3">
                <div class="h-10 w-10 bg-red-600 rounded-xl flex items-center justify-center shadow-[0_0_15px_rgba(37,99,235,0.4)]">
                    <i class="bi bi-train-lightrail-front text-white text-xl"></i>
                </div>
                <span class="text-2xl font-bold tracking-tighter">RAIL<span class="text-blue-500">OPS</span></span>
            </div>
            
            <div class="flex items-center gap-6">
                <div class="hidden md:block text-right">
                    <p class="text-xs text-slate-500 font-bold uppercase tracking-widest">Active Session</p>
                    <p class="text-sm text-slate-300">@ViewBag.UserEmail</p>
                </div>
                <a href="@Url.Action("Logout", "Account")" class="h-11 w-11 flex items-center justify-center rounded-xl border border-slate-700 hover:bg-red-500/10 hover:border-red-500/50 text-slate-400 hover:text-red-500 transition-all">
                    <i class="bi bi-power text-xl"></i>
                </a>
            </div>
        </div>
    </nav>

    <main class="max-w-7xl mx-auto px-6 py-10">
        <div class="mb-12">
            <h1 class="text-4xl font-light">System <span class="font-bold text-white">Dashboard</span></h1>
            <p class="text-slate-500 mt-2">Welcome back. System is online and ready for bookings.</p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
            
            <div class="lg:col-span-3 space-y-6">
                <div class="dark-card accent-glow rounded-3xl p-10 relative overflow-hidden group">
                    <div class="relative z-10 max-w-lg">
                        <h2 class="text-3xl font-bold mb-4">Plan Your Next Deployment</h2>
                        <p class="text-slate-400 mb-8 leading-relaxed">Secure your seats across the national network with our priority booking engine. Optimized for speed and reliability.</p>
                        <a href="@Url.Action("Search", "Train")" class="inline-flex items-center gap-3 bg-blue-600 hover:bg-blue-500 text-white px-8 py-4 rounded-2xl font-bold transition-all transform hover:translate-x-2">
                            Initialize Search <i class="bi bi-chevron-right"></i>
                        </a>
                    </div>
                    <div class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-blue-600/10 to-transparent pointer-events-none"></div>
                    <i class="bi bi-radar absolute -right-10 -bottom-10 text-[12rem] text-slate-800/20 group-hover:text-blue-500/10 transition-colors"></i>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <a href="@Url.Action("History", "Booking")" class="dark-card rounded-3xl p-8 hover:border-blue-500/50 transition-all group">
                        <div class="flex items-center justify-between mb-4">
                            <div class="h-12 w-12 rounded-2xl bg-slate-800 flex items-center justify-center text-blue-500 group-hover:bg-blue-600 group-hover:text-white transition-all">
                                <i class="bi bi-clock-history text-2xl"></i>
                            </div>
                            <i class="bi bi-arrow-up-right text-slate-600"></i>
                        </div>
                        <h3 class="text-xl font-bold mb-2">Booking Archive</h3>
                        <p class="text-slate-500 text-sm">Review past travels, download tickets, and manage active reservations.</p>
                    </a>

                    <button class="dark-card rounded-3xl p-8 text-left hover:border-blue-500/50 transition-all group">
                        <div class="flex items-center justify-between mb-4">
                            <div class="h-12 w-12 rounded-2xl bg-slate-800 flex items-center justify-center text-emerald-500 group-hover:bg-emerald-600 group-hover:text-white transition-all">
                                <i class="bi bi-person-gear text-2xl"></i>
                            </div>
                            <i class="bi bi-arrow-up-right text-slate-600"></i>
                        </div>
                        <h3 class="text-xl font-bold mb-2">Security Settings</h3>
                        <p class="text-slate-500 text-sm">Update your credentials, passenger details, and account preferences.</p>
                    </button>
                </div>
            </div>

            <div class="space-y-6">
                <div class="dark-card rounded-3xl p-6">
                    <h4 class="text-xs font-bold text-slate-500 uppercase tracking-widest mb-6">Account Status</h4>
                    <div class="space-y-4">
                        <div class="flex justify-between items-center py-3 border-b border-slate-800">
                            <span class="text-slate-400 text-sm">User ID</span>
                            <span class="font-mono text-blue-400">#@ViewBag.UserId</span>
                        </div>
                        <div class="flex justify-between items-center py-3 border-b border-slate-800">
                            <span class="text-slate-400 text-sm">Member Type</span>
                            <span class="text-slate-200 text-sm font-bold">Standard</span>
                        </div>
                        <div class="flex justify-between items-center py-3">
                            <span class="text-slate-400 text-sm">Security</span>
                            <span class="text-emerald-500 text-sm flex items-center gap-1">
                                <i class="bi bi-shield-fill-check"></i> Active
                            </span>
                        </div>
                    </div>
                </div>

                <div class="bg-gradient-to-br from-blue-600 to-indigo-700 rounded-3xl p-6 shadow-lg shadow-blue-900/20">
                    <i class="bi bi-headset text-3xl text-white/50 mb-4 block"></i>
                    <h4 class="font-bold text-white text-lg">Need Assistance?</h4>
                    <p class="text-blue-100 text-sm mt-2 mb-4">Our support team is available 24/7 for technical help.</p>
                    <button class="w-full py-2 bg-white/10 hover:bg-white/20 border border-white/20 rounded-xl text-white text-sm font-bold transition-all">
                        Open Support Ticket
                    </button>
                </div>
            </div>

        </div>
    </main>
</div>