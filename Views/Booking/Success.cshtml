@model RailwayBookingApp.Models.Booking

@{
    ViewData["Title"] = "Booking Success";
}

<div class="container mt-4">
    <h2 class="text-success">üéüÔ∏è Booking Confirmed</h2>
    <p>Your train ticket has been successfully booked!</p>

    <div class="card mt-3 shadow-sm">
        <div class="card-body">
            <h5 class="card-title">Ticket Details</h5>
            <p><strong>Passenger:</strong> @Model.PassengerName</p>
            <p><strong>Train:</strong> @ViewBag.TrainName</p>
            <p><strong>Route:</strong> @ViewBag.Route</p>
            <p><strong>Departure:</strong> @ViewBag.Departure</p>
            <p><strong>Seats:</strong> @Model.Seats</p>
            <p><strong>Class:</strong> @Model.Class</p>
            <p><strong>Seat Numbers:</strong> @Model.SeatNumbers</p>
            <p><strong>Total Price:</strong> ‚Çπ@Model.Price</p>
        </div>
    </div>

    <div class="mt-3">
        <button class="btn btn-outline-secondary" onclick="window.print()">üñ®Ô∏è Print Ticket</button>
        <a class="btn btn-primary" href="@Url.Action("Dashboard", "Account")">Back to Dashboard</a>
        <a class="btn btn-secondary" href="@Url.Action("History", "Booking")">View My Booking History</a>
    </div>
    <div class="max-w-md w-full mb-6 bg-blue-500/10 border border-blue-500/30 rounded-2xl p-4 flex items-center gap-4 animate__animated animate__fadeInUp">
    <div class="bg-blue-500 p-2 rounded-lg text-white">
        <i class="bi bi-envelope-check"></i>
    </div>
    <div>
        <h4 class="text-sm font-bold text-black">Email Dispatched</h4>
        <p class="text-xs text-slate-400">A copy of this ticket has been sent to your registered email.</p>
    </div>
</div>
</div>