@{
    ViewData["Title"] = "Welcome to RailReserve";
}

<script src="https://cdn.tailwindcss.com"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="relative bg-slate-900 h-[80vh] flex items-center overflow-hidden">
    <div class="absolute inset-0 z-0">
        <img src="https://images.unsplash.com/photo-1532105956626-9569c03602f6?q=80&w=2000&auto=format&fit=crop" 
             class="w-full h-full object-cover opacity-50" alt="Train Background">
        <div class="absolute inset-0 bg-gradient-to-r from-slate-900 via-slate-900/60 to-transparent"></div>
    </div>

    <div class="container mx-auto px-6 relative z-10">
        <div class="max-w-2xl">
            <h1 class="text-5xl md:text-7xl font-extrabold text-white leading-tight mb-6">
                Your Journey, <br><span class="text-blue-500">Simplified.</span>
            </h1>
            <p class="text-lg md:text-xl text-slate-300 mb-8 leading-relaxed">
                Welcome to India's most modern railway booking experience. We provide a fast, secure, and reliable way to manage your travels across the country.
            </p>
            
            <div class="flex flex-wrap gap-4">
                <a href="@Url.Action("Register", "Account")" 
                   class="bg-blue-600 hover:bg-blue-700 text-white px-8 py-4 rounded-xl font-bold text-lg transition-all transform hover:scale-105 shadow-xl inline-flex items-center">
                    Get Started With Us <i class="bi bi-arrow-right ms-2"></i>
                </a>
                
                <div class="flex items-center gap-4 px-4 py-2 bg-white/10 backdrop-blur-md rounded-lg border border-white/20">
                    <a href="@Url.Action("Login", "Account")" class="text-white hover:text-blue-400 font-semibold transition">Login</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="bg-white py-24">
    <div class="container mx-auto px-6">
        <div class="max-w-3xl mb-16">
            <h2 class="text-blue-600 font-bold tracking-widest uppercase text-sm mb-3">About RailReserve</h2>
            <h3 class="text-4xl font-bold text-slate-900">Making Railway Travel Efficient for Everyone</h3>
            <p class="text-slate-600 mt-4 text-lg">
                Our platform is built on three core pillars designed to provide the best possible experience for Indian railway passengers.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
            <div class="group">
                <div class="w-14 h-14 bg-blue-100 text-blue-600 rounded-2xl flex items-center justify-center text-2xl mb-6 group-hover:bg-blue-600 group-hover:text-white transition-all duration-300">
                    <i class="bi bi-speedometer2"></i>
                </div>
                <h4 class="text-xl font-bold text-slate-900 mb-3">Real-time Performance</h4>
                <p class="text-slate-600">
                    Access live train data and availability instantly. Our high-speed servers ensure you never miss a booking window.
                </p>
            </div>

            <div class="group">
                <div class="w-14 h-14 bg-blue-100 text-blue-600 rounded-2xl flex items-center justify-center text-2xl mb-6 group-hover:bg-blue-600 group-hover:text-white transition-all duration-300">
                    <i class="bi bi-shield-lock"></i>
                </div>
                <h4 class="text-xl font-bold text-slate-900 mb-3">Secure Infrastructure</h4>
                <p class="text-slate-600">
                    We use bank-grade encryption to protect your personal information and booking history, ensuring complete peace of mind.
                </p>
            </div>

            <div class="group">
                <div class="w-14 h-14 bg-blue-100 text-blue-600 rounded-2xl flex items-center justify-center text-2xl mb-6 group-hover:bg-blue-600 group-hover:text-white transition-all duration-300">
                    <i class="bi bi-people"></i>
                </div>
                <h4 class="text-xl font-bold text-slate-900 mb-3">User-Centric Design</h4>
                <p class="text-slate-600">
                    Built by travelers, for travelers. Our interface is designed to be intuitive for users of all ages and technical levels.
                </p>
            </div>
        </div>
    </div>
</div>

<div class="bg-slate-50 py-16 border-t border-slate-200">
    <div class="container mx-auto px-6 text-center">
        <h3 class="text-2xl font-bold text-slate-900 mb-6">Ready to plan your next trip?</h3>
        <a href="@Url.Action("Register", "Account")" class="text-blue-600 font-bold hover:underline">
            Create your account now and start exploring <i class="bi bi-chevron-right"></i>
        </a>
    </div>
</div>