<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Railway Booking System</title>

    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          rel="stylesheet" />

    <style>
        body {
            background-color: #f5f7fa;
        }

        .navbar {
            box-shadow: 0 2px 10px rgba(0,0,0,.08);
        }
    </style>
</head>

<body>

    <!-- ✅ PRO NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top">
        <div class="container">

            <!-- Logo -->
            <a class="navbar-brand fw-bold" asp-controller="Train" asp-action="Search">
                🚆 Railway Booking
            </a>

            <!-- Mobile Toggle -->
            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navMenu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Menu -->
            <div class="collapse navbar-collapse" id="navMenu">

                <ul class="navbar-nav ms-auto">

                    @if (Context.Session.GetInt32("UserId") != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white"
                               asp-controller="Account"
                               asp-action="Dashboard">
                                Dashboard
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white"
                               asp-controller="Booking"
                               asp-action="History">
                                My Bookings
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-warning fw-semibold"
                               asp-controller="Account"
                               asp-action="Logout">
                                Logout
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white"
                               asp-controller="Account"
                               asp-action="Login">
                                Login
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="btn btn-light ms-2"
                               asp-controller="Account"
                               asp-action="Register">
                                Register
                            </a>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </nav>


    <!-- ✅ MAIN CONTENT -->
    <div class="container mt-4">
        @RenderBody()
    </div>


    <!-- Bootstrap JS (VERY IMPORTANT for mobile menu) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
