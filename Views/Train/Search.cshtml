@{
    ViewData["Title"] = "Search Trains";
}

<script src="https://cdn.tailwindcss.com"></script>
<link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    body { 
        font-family: 'Outfit', sans-serif; 
        background-color: #0f172a; 
        color: #f8fafc;
    }
    .search-card {
        background: linear-gradient(145deg, #1e293b, #0f172a);
        border: 1px solid #334155;
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.3);
    }
    .input-field {
        background: #1e293b;
        border: 1px solid #475569;
        transition: all 0.3s ease;
    }
    .input-field:focus {
        border-color: #3b82f6;
        box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.2);
        outline: none;
    }
</style>

<div class="min-h-screen flex items-center justify-center px-6 py-12">
    <div class="max-w-2xl w-full">
        <div class="text-center mb-10">
            <div class="inline-flex items-center justify-center w-16 h-16 rounded-2xl bg-blue-600/20 text-blue-500 mb-4 border border-blue-500/30">
                <i class="bi bi-search text-3xl"></i>
            </div>
            <h1 class="text-4xl font-bold tracking-tight text-white">Find Your Train</h1>
            <p class="text-slate-400 mt-2">Enter your route details to view live availability and schedules.</p>
        </div>

        <div class="search-card rounded-3xl p-8 md:p-12 relative overflow-hidden">
            <div class="absolute -top-24 -right-24 w-48 h-48 bg-blue-600/10 rounded-full blur-3xl"></div>
            
            <form asp-action="Results" asp-controller="Train" method="post" class="space-y-8 relative z-10">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="space-y-2">
                        <label class="text-sm font-semibold text-slate-300 ml-1 uppercase tracking-wider">From Station</label>
                        <div class="relative">
                            <i class="bi bi-geo-alt absolute left-4 top-1/2 -translate-y-1/2 text-slate-500"></i>
                            <input type="text" name="source" 
                                   class="input-field w-full pl-12 pr-4 py-4 rounded-2xl text-white placeholder:text-slate-600" 
                                   placeholder="e.g. Mumbai" required />
                        </div>
                    </div>

                    <div class="space-y-2">
                        <label class="text-sm font-semibold text-slate-300 ml-1 uppercase tracking-wider">To Destination</label>
                        <div class="relative">
                            <i class="bi bi-geo-fill absolute left-4 top-1/2 -translate-y-1/2 text-slate-500"></i>
                            <input type="text" name="destination" 
                                   class="input-field w-full pl-12 pr-4 py-4 rounded-2xl text-white placeholder:text-slate-600" 
                                   placeholder="e.g. Delhi" required />
                        </div>
                    </div>
                </div>

                <button type="submit" 
                        class="w-full bg-blue-600 hover:bg-blue-500 text-white font-bold py-5 rounded-2xl shadow-lg shadow-blue-900/20 transition-all transform hover:-translate-y-1 flex items-center justify-center gap-3 text-lg">
                    <i class="bi bi-lightning-fill text-yellow-400"></i> Initialize Search
                </button>
            </form>
        </div>

        <div class="text-center mt-8">
            <a href="@Url.Action("Dashboard", "Account")" class="text-slate-500 hover:text-blue-400 text-sm font-medium transition-colors flex items-center justify-center gap-2">
                <i class="bi bi-arrow-left"></i> Return to Dashboard
            </a>
        </div>
    </div>
</div>